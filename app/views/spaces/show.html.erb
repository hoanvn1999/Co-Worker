<div class="short-wrap"></div>

<section class="ftco-section">
  <div class="container">
    <div class="row mb-3">
      <div class="col-md-4">
        <%= image_tag @space.space_image, class: "img-fluid" %>
      </div>
      <div class="col-md-8">
        <h2><%= @space.name %></h2>
        <p class="text-primary"><i class="fa fa-map-marker mr-2"> </i><%= @space.address %></p>
        <p><span class="font-weight-bold"><%= t "space.price" %>: </span> <%= t("price", price: exchange_money(@space.price)) %></p>
        <p><span class="font-weight-bold"><%= t "space.area" %>: </span> <%= @space.area %>m<sup>2</sup></p>
        <%= link_to t("index.booking_now"), new_booking_path(space_id: @space.id), class: "ml-5 btn btn-primary" %>
        <div class="text-center">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <h5><%= t "space.description" %></h5>
        <p><%= @space.description %></p>
      </div>
    </div>
  </div>
</div>
